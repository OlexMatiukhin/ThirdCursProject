<Window
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport.Views.Dialog"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Airport.Views.Dialog.ChangePlane"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePlane">

    <Grid Margin="3,0,-3,0">
        <TextBlock HorizontalAlignment="Left" Margin="297,31,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Language="uk-ua" Text="Приписка"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <Button Content="Змінити" HorizontalAlignment="Left" Margin="167,119,0,0" VerticalAlignment="Top" Width="140"  Command="{Binding ChnagePassangerCommand}" />
        <CheckBox IsChecked="{Binding Assigned}" HorizontalAlignment="Left"  Margin="319,53,0,0" VerticalAlignment="Top"  RenderTransformOrigin="1,0.731" Height="17"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,34,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Text="Дата "/><Run Language="uk-ua" Text="техогляду"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Margin="87,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" Height="21" Text="{Binding PlaneNumber}"/>






    </Grid>
</Window>
