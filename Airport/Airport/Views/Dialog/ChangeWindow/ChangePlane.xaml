<Window x:Class="Airport.Views.Dialog.ChangePlane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport.Views.Dialog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePlane">

    <Grid Margin="3,0,-3,0">
        <ComboBox  ItemsSource="{Binding TechCondition }"  SelectedValue="{Binding SelectedTechCondition, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="190,54,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox  ItemsSource="{Binding InteriorReadiness }"  SelectedValue="{Binding SelectedInteriorReadiness, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="325,54,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="203,35,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Language="uk-ua" Text="Технічний стан"/><LineBreak/><Run Language="uk-ua"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="330,34,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Language="uk-ua" Text="Готовність салону"/><LineBreak/><Run Language="uk-ua"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="482,37,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Text="Дата "/><Run Language="uk-ua" Text="техогляду"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="355,91,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Language="uk-ua" Text="Приписка"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="203,91,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Language="uk-ua" Text="Кількість ремонтів"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <Button Content="Змінити" HorizontalAlignment="Left" Margin="225,149,0,0" VerticalAlignment="Top" Width="140"  Command="{Binding ChnagePassangerCommand}" />
        <TextBox Text="{Binding NumberFlightsBeforeRepair }" HorizontalAlignment="Left" Margin="203,113,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="18"/>
        <CheckBox IsChecked="{Binding Assigned}" HorizontalAlignment="Left"  Margin="374,115,0,0" VerticalAlignment="Top"  RenderTransformOrigin="1,0.731"/>
        <TextBlock HorizontalAlignment="Left" Margin="622,37,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Text="Дата "/><Run Language="uk-ua" Text="експлуатації"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="62,97,0,0" TextWrapping="Wrap" FontFamily="pack://application:,,,/Fonts/#Inter" VerticalAlignment="Top" FontWeight="Bold" Height="14"><Run Text="Дата "/><Run Language="uk-ua" Text="техогляду"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Margin="55,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18" Text="{Binding NumberRepairs }"/>
        <DatePicker  SelectedDate="{Binding TechInspectionDate, Mode=TwoWay}" HorizontalAlignment="Left" Margin="482,57,0,0" VerticalAlignment="Top"/>
        <DatePicker SelectedDate="{Binding ExploitationDate, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="622,57,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
