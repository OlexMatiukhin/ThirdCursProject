        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1EB7EE" Offset="0"/>
            <GradientStop Color="#FFECE8E8" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,4,0,-4">
        <Image HorizontalAlignment="Left" Width="184"  Margin="281,22,0,0" IsEnabled="True" Source="/Images/Logo.png" VerticalAlignment="Top" Grid.Row="0" Height="70"/>

        <TextBox    HorizontalAlignment="Left" Margin="240,148,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="295" Height="30" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="22"/>
