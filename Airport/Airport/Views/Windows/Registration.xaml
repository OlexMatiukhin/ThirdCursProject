        <TextBlock HorizontalAlignment="Left" Margin="360,119,0,0" TextWrapping="Wrap" Text="Логін" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="360,0,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <Button Content="Увійти" HorizontalAlignment="Left" Margin="240,320,0,0" VerticalAlignment="Top" Height="30" Width="295" Background="#FFFAF100" FontWeight="Bold" FontSize="16"/>
        <TextBlock Margin="330,371,355,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Height="19"><Run Language="uk-ua" Text="Забули пароль"/><LineBreak/><Run Language="uk-ua"/></TextBlock>

    </Grid>
